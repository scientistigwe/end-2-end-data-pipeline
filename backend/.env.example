# backend/.env.example
# Database Configuration
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enterprise_pipeline_db

# Security Keys
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_PRIVATE_KEY=your_private_key_here
JWT_PUBLIC_KEY=your_public_key_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/data_pipeline.log

# Additional Security Settings
ENABLE_SSL=True
SSL_CERT_PATH=/path/to/ssl/cert

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES=3600            # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000        # 30 days in seconds

# Production Settings (if needed)
PRODUCTION_DOMAIN=https://yourdomain.com
API_DOMAIN=https://api.yourdomain.com

VITE_API_URL=http://localhost:5173